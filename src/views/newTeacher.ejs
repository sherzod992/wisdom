      <% if (teachers.length > 0) { %>
        <table class="students-table">
          <thead>
            <tr>
              <th>#</th>
              <th>Ism</th>
              <th>Telefon</th>
              <th>Ro'yxatdan oâ€˜tgan vaqt</th>
            </tr>
